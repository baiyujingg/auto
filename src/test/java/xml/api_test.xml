                    <include name="testGet_1"/> <!--指定代码中的哪个方法,这里指定的是saveGroup()方法-->
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="GET_2">   <!--这里的name是最终呈现在测试报告上的用例名-->
